FROM arm64v8/debian:bookworm

# Add backports repository to apt sources
RUN echo "deb http://deb.debian.org/debian bookworm-backports main" > /etc/apt/sources.list.d/bookworm-backports.list

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    build-essential \
    gcc-arm-linux-gnueabihf \
    g++-arm-linux-gnueabihf \
    devscripts \
    fakeroot \
    debhelper \
    ninja-build \
    dh-python \
    cmake \
    audiofile-tools \
    ca-certificates \
    cuetools \
    lame \
    libcue2 \
    libadplug-dev \
    libao-dev \
    libasound2-dev \
    libaudiofile1 \
    libaudiofile-dev \
    libavahi-client-dev \
    libavcodec-dev \
    libavfilter-dev \
    libavformat-dev \
    libbz2-dev \
    libcdio-paranoia-dev \
    libchromaprint-dev \
    libcue-dev \
    libcurl4-gnutls-dev \
    libexpat1-dev \
    libfaad-dev \
    libflac-dev \
    libfluidsynth-dev \
    libfmt-dev \
    libgme-dev \
    libgtest-dev \
    libicu-dev \
    libid3tag0-dev \
    libiso9660-dev \
    libjack-jackd2-dev \
    libmad0-dev \
    libmikmod-dev \
    libmms-dev \
    libmodplug-dev \
    libmp3lame-dev \
    libmpcdec-dev \
    libmpdclient-dev \
    libmpg123-dev \
    libnfs-dev \
    libogg-dev \
    libopenal-dev \
    libopenmpt-dev \
    libopus-dev \
    libpcre2-dev \
    libpipewire-0.3-dev \
    libpulse-dev \
    libresid-builder-dev \
    libsamplerate0-dev \
    libshout3-dev \
    libsidplayfp-dev \
    libsidutils-dev \
    libsmbclient-dev \
    libsndfile1-dev \
    libsoxr-dev \
    libsqlite3-dev \
    libsystemd-dev \
    libupnp-dev \
    liburing-dev \
    libvorbis-dev \
    libwavpack-dev \
    libwildmidi-dev \
    libyajl-dev \
    libzzip-dev \
    nlohmann-json3-dev \
    systemd-dev \
    python3-pip \
    python3-setuptools \
    python3-wheel \
    unzip \
    wget \
    zip

# Install Meson >= 1.2.0 from backports to satisfy dpkg-checkbuilddeps
RUN apt-get update && apt-get -t bookworm-backports install -y meson
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Patch dh_install for reproducible builds
RUN sed -i "s/doit(\"cp\", '--reflink=auto', \"-a\"/doit(\"cp\", '--reflink=auto', \"-a\", \"--no-preserve=ownership\"/g" /usr/bin/dh_install
RUN sed -i "s/xargs(\\\@srcs, \"cp\", '--reflink=auto', \"-a\"/xargs(\\\@srcs, \"cp\", '--reflink=auto', \"-a\", \"--no-preserve=ownership\"/g" /usr/bin/dh_install

WORKDIR /build
